
<% content_for(:title) {"New Client (RP)"} %>

<article>
  <%= form_for @client, :html => {:class => 'box'} do |f| %>
    <%= render 'clients/form', client:@client, redirect_uris:@redirect_uris,
                               f: f %>
    <%= link_to 'Cancel', '/clients/', class:'button is-light' %>
    <%= f.submit class:'button is-primary' %>
  <% end %>
</article>

