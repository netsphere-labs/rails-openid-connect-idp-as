
<% content_for(:title) {"Edit " + @client.name } %>

<article>
  <%= form_for @client, :method => :put, :html => {:class => 'box'} do |f| %>
    <%= render 'clients/form', client:@client, redirect_uris:@redirect_uris,
                               f: f %>
    <%= link_to 'Cancel', '/dashboard', class:'uk-button uk-button-default' %>
    <%= f.submit class:'uk-button uk-button-primary' %>
  <% end %>
</article>
